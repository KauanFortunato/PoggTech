<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ================= APP THEME ================= -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- ================= HEADERS ================= -->
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="CategorieHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!-- ================= TEXT INPUTS ================= -->
    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Label_Edit_Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- ================= BUTTONS ================= -->
    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Button" parent="BaseButton">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="ButtonUnable" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_unable</item>
    </style>

    <style name="ButtonCancel" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_cancel</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonGoogle" parent="BaseButton">
        <item name="android:background">@drawable/rounded_button_light</item>
        <item name="android:elevation">5dp</item>
    </style>

    <!-- ================= NAVIGATION ================= -->
    <style name="BottomNav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:elevation">12dp</item>
    </style>

    <!-- ================= TEXT STYLES ================= -->
    <style name="ConfigTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ConfigText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ConfigTextEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ================= COMPONENTES DIVERSOS ================= -->
    <style name="SearchBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/rounded_menu_stroke</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Categories">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="buttonChat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.TransparentStartIcon" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- ================= PRODUTOS ================= -->
    <style name="productContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="productSectionTitle">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="popularContainer" parent="productContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- ================= CATEGORIAS ================= -->
    <style name="categoriesHome">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_category</item>
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/textPrimary</item>
    </style>

    <!-- ================= CONFIGURAÇÕES ================= -->
    <style name="sectionConfigTitle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="sectionConfig">
        <item name="android:background">@drawable/rounded_stroke</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="sectionConfigItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawableEnd">@drawable/ic_forward</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="sectionConfigText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- ================= PEDIDOS ================= -->

    <style name="OrderIcons">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_item_filter</item>
    </style>

    <!-- ================= FILTROS E OFERTAS ================= -->
    <style name="itemFilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_item_filter</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="itemFilterButtonSelected" parent="itemFilterButton">
        <item name="android:background">@drawable/bg_item_filter_selected</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="discount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small_alt</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnError</item>
        <item name="android:background">@drawable/bg_discount</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- ================= OUTROS ================= -->
    <style name="division">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@color/elevatedSurface</item>
    </style>

    <style name="ViewRounded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ================= MENU ================= -->
    <style name="ItemMenuActive"></style>


    <style name="RatingBar.RatingBarYellow" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">#FFC507</item>
        <item name="colorControlNormal">@color/textTertiary</item>
    </style>

</resources>
