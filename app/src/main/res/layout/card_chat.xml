<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp"
    android:paddingHorizontal="5dp"
    android:orientation="horizontal"
    android:background="@drawable/section_divisor">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_full">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/xbox_series_x"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="100dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:text="Microsoft Xbox 360 preto"
            android:fontFamily="@font/roboto"
            android:textColor="@color/textTertiary"/>

        <TextView
            android:id="@+id/chatWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:layout_weight="1"
            android:text="Dioguinho do PJL"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/textPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="40dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textTertiary"
                android:text="Ainda estÃ¡ interessado?" />

            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:01"
                android:textColor="@color/textTertiary"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
