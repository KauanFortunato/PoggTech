<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.activity.SignUpActivity">

    <RelativeLayout
        android:id="@+id/header"
        style="@style/Header"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_menu"
            android:contentDescription="@string/voltar"
            android:src="@drawable/ic_back"
            android:tint="@color/colorOnBackground"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/headerText"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/cadastro"
            android:textAlignment="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/titleNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label_Edit_Text"
            android:text="@string/nome" />

        <EditText
            android:id="@+id/inputNome"
            style="@style/Edit_Text"
            android:hint="@string/nome"
            android:drawableStart="@drawable/ic_persona_outline"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edit_text_icon_color"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label_Edit_Text"
            android:text="@string/sobrenome" />

        <EditText
            android:id="@+id/inputSobrenome"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_persona_outline"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edit_text_icon_color"

            android:hint="@string/sobrenome"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label_Edit_Text"
            android:text="@string/enderecoEmail" />

        <EditText
            android:id="@+id/inputEmail"
            style="@style/Edit_Text"
            android:hint="@string/enderecoEmail"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edit_text_icon_color"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titlePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label_Edit_Text"
            android:text="@string/palavraPasse" />

        <EditText
            android:id="@+id/inputPassword"
            style="@style/Edit_Text"
            android:hint="@string/palavraPasse"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edit_text_icon_color"
            android:drawableEnd="@drawable/ic_eye_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label_Edit_Text"
            android:text="@string/confirmarPalavraPasse" />

        <EditText
            android:id="@+id/inputConfirmPassword"
            style="@style/Edit_Text"
            android:hint="@string/confirmarPalavraPasse"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edit_text_icon_color"
            android:drawableEnd="@drawable/ic_eye_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignUp"
            style="@style/Button"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:text="@string/signUp"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>