<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secundaria_2"
    tools:context=".ui.activity.SignUpActivity">

    <RelativeLayout
        android:id="@+id/header"
        style="@style/Header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/voltar"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/headerText"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="@string/cadastro" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/titleNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/nome"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputNome"
            style="@style/Edit_Text"
            android:hint="@string/nome"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/sobrenome"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputSobrenome"
            style="@style/Edit_Text"
            android:hint="@string/sobrenome"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/enderecoEmail"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputEmail"
            style="@style/Edit_Text"
            android:hint="@string/enderecoEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titlePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/palavraPasse"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputPassword"
            style="@style/Edit_Text"
            android:hint="@string/palavraPasse"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/confirmarPalavraPasse"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputConfirmPassword"
            style="@style/Edit_Text"
            android:hint="@string/confirmarPalavraPasse"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignUp"
            style="@style/Button"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:text="@string/cadastrar"
            android:textAllCaps="false"
            android:textColor="@color/principal_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>