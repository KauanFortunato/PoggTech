<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layoutAnimation="@anim/layout_animation_fade_slide_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:gravity="top"
                        android:orientation="horizontal" >

                        <View
                            android:id="@+id/titleProduct"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/bg_skeleton"/>

                        <!-- Avaliação do vendedor -->
                        <View
                            android:id="@+id/productRatingContainer"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_skeleton">
                        </View>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">
                        <View
                            android:id="@+id/category"
                            android:layout_width="80dp"
                            android:layout_height="23dp"
                            android:background="@drawable/bg_skeleton"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <View
                            android:id="@+id/saveButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_skeleton"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="15dp">

                        <View
                            android:id="@+id/categoryIcon"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_skeleton"
                            android:padding="20dp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="25dp"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="91dp"
                        android:layout_height="53dp"
                        android:gravity="fill_vertical"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_skeleton" />

                        <View
                            android:id="@+id/priceDecimal"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="1dp"
                            android:background="@drawable/bg_skeleton"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="73dp"
                        android:layout_height="46dp"
                        android:background="@drawable/bg_skeleton" />
                </LinearLayout>

                <View
                    android:id="@+id/priceBefore"
                    android:layout_width="90dp"
                    android:layout_height="15dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/bg_skeleton" />

                <View
                    android:id="@+id/productPoggers"
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_skeleton" />

                <View
                    android:layout_width="270dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_skeleton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <View
                    android:id="@+id/actionPrimaryProduct"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_skeleton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingHorizontal="15dp"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="2dp"
                    android:background="@drawable/bg_divisor_bottom"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_skeleton"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <View
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:padding="10dp"
                        android:background="@drawable/bg_skeleton"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_skeleton"/>

                    <View
                        android:id="@+id/sellerRating"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_skeleton"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>