<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:gravity="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerSearch"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/backgroundColor"
        android:gravity="end"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <ImageButton
            android:id="@+id/btnBackHeader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_menu"
            android:contentDescription="@string/menu_lateral"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/searchProd"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:autofillHints="produtopesquisa"
            android:background="@drawable/rounded_menu_stroke"
            android:drawableStart="@drawable/ic_lupa"
            android:drawablePadding="10dp"
            android:elevation="1dp"
            android:hint="@string/pesquisaHint"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBackHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
