<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header"
        style="@style/Header"
        android:elevation="0dp"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuLateral"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_menu"
            android:contentDescription="@string/menu_lateral"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/searchProd"
            style="@style/SearchBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:autofillHints="produtopesquisa"
            android:drawableStart="@drawable/ic_lupa"
            android:hint="@string/pesquisaHint"
            android:inputType="text"
            android:padding="8dp"
            android:elevation="1dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
