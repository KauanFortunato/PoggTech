<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    app:cardElevation="14dp"
    android:gravity="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerSearch"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_header"
        android:gravity="end"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <ImageButton
            android:id="@+id/btnBackHeader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="14dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/menu_lateral"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/searchProd"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:autofillHints="produtopesquisa"
            android:background="@drawable/bg_edit_text"
            android:drawableEnd="@drawable/ic_search"
            android:elevation="0dp"
            android:hint="@string/pesquisaHint"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBackHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
