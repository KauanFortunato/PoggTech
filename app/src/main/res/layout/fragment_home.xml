<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContent">

    <LinearLayout
        android:id="@+id/categoriesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="@drawable/rounded_bottom_med"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tudoCategorie"
            style="@style/CategorieHeader"
            android:text="Para Você"/>

        <TextView
            android:id="@+id/consolesCategorie"
            style="@style/CategorieHeader"
            android:text="Consoles"/>

        <TextView
            android:id="@+id/jogosCategorie"
            style="@style/CategorieHeader"
            android:text="Jogos"/>

        <TextView
            android:id="@+id/acesCategorie"
            style="@style/CategorieHeader"
            android:text="Acessórios"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/categoriesHeader">

        <!-- ScrollView que contém os LinearLayouts -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/background_fade_home">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="70dp"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="24sp"
                        android:fontFamily="@font/roboto_black"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Descrubra ofertas novas todos os dias"/>

                </FrameLayout>

                <!-- Skeleton Loader para "Continuar a Comprar" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerContinueBuy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="true"
                        app:shimmer_base_alpha="0.7"
                        app:shimmer_highlight_alpha="1.0"
                        app:shimmer_duration="1000">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvContinueBuySkeleton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/skeleton_card_continue_product"
                            android:orientation="horizontal"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <!-- RecyclerView real -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvContinueBuy"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        tools:listitem="@layout/card_continue_product"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/containerProductsHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Container "Para Você" -->
                    <LinearLayout
                        android:id="@+id/forYouContainer"
                        style="@style/productContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/productSectionTitle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/paraVoce" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimaryVariant"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Ver mais" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvForYou"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/card_product"
                                android:orientation="horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Jogos" -->
                    <LinearLayout
                        android:id="@+id/jogosContainer"
                        style="@style/popularContainer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/productSectionTitle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Popular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimaryVariant"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Ver mais" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPopular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:orientation="horizontal"
                                tools:listitem="@layout/card_product"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Acessórios" -->
                    <LinearLayout
                        android:id="@+id/acessoryContainer"
                        style="@style/productContainer"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/acessorios" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvAcessory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Consolas" -->
                    <LinearLayout
                        android:id="@+id/consolasContainer"
                        style="@style/productContainer"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/consolas" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvConsolas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_marginTop="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>
