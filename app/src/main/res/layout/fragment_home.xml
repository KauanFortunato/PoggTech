<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        style="@style/Header"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/headerText"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rowdies_bold"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:elevation="12dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/menuLateral"
            android:contentDescription="@string/menu_lateral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:background="@drawable/rounded_menu"
            android:layout_alignParentStart="true"
            android:layout_below="@id/headerText"
            android:layout_marginStart="16dp"
            android:elevation="8dp"
            />

        <EditText
            android:id="@+id/searchProd"
            style="@style/SearchBar"
            android:layout_toStartOf="@id/perfil"
            android:layout_toEndOf="@id/menuLateral"
            android:layout_centerVertical="true"
            android:layout_below="@id/headerText"
            android:autofillHints="produtopesquisa"
            android:hint="@string/pesquisaHint"
            android:drawableStart="@drawable/ic_lupa"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/perfil"
            android:contentDescription="@string/menu_lateral_perfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_persona"
            android:background="@drawable/rounded_menu"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/headerText"
            android:layout_marginEnd="16dp"
            android:elevation="8dp"
            />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>