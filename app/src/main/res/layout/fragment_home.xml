<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContent">

    <LinearLayout
        android:id="@+id/categoriesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="@drawable/rounded_bottom_med"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tudoCategorie"
            style="@style/CategorieHeader"
            android:text="Tudo"/>

        <TextView
            android:id="@+id/consolesCategorie"
            style="@style/CategorieHeader"
            android:text="Consoles"/>

        <TextView
            android:id="@+id/jogosCategorie"
            style="@style/CategorieHeader"
            android:text="Jogos"/>

        <TextView
            android:id="@+id/acesCategorie"
            style="@style/CategorieHeader"
            android:text="Acessórios"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/categoriesHeader">

        <!-- ScrollView que contém os LinearLayouts -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img" />

                <!-- Skeleton Loader para "Continuar a Comprar" -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerContinueBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_auto_start="true"
                    app:shimmer_base_alpha="0.7"
                    app:shimmer_highlight_alpha="1.0"
                    app:shimmer_duration="1000">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvContinueBuySkeleton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/skeleton_card_continue_product"
                        android:orientation="horizontal"/>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- RecyclerView real -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContinueBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="gone"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:id="@+id/containerProductsHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Container "Para Você" -->
                    <LinearLayout
                        android:id="@+id/forYouContainer"
                        style="@style/productContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paraVoce" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvForYou"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/card_product"
                                android:orientation="horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Jogos" -->
                    <LinearLayout
                        android:id="@+id/jogosContainer"
                        style="@style/productContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/jogos" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvJogos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:orientation="horizontal"
                                tools:listitem="@layout/card_product"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Acessórios" -->
                    <LinearLayout
                        android:id="@+id/acessoryContainer"
                        style="@style/productContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/acessorios" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvAcessory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Container "Consolas" -->
                    <LinearLayout
                        android:id="@+id/consolasContainer"
                        style="@style/productContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp">

                        <TextView
                            style="@style/productSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/consolas" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvConsolas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>
