<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_product_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">

        <include layout="@layout/skeleton_product_details" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorSurface"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSurface"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/titleProduct"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="2"
                                android:text="-----------"
                                android:textColor="@color/textPrimary"
                                android:textSize="19sp" />

                            <!-- Avaliação do vendedor -->
                            <LinearLayout
                                android:id="@+id/productRatingContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productRating1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="2dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="-.-"
                                    android:textColor="@color/textTertiary"
                                    android:textSize="13sp" />

                                <LinearLayout
                                    android:id="@+id/starsContainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/category"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/games"
                                android:textColor="@color/textSecondary"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/saveButton"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_marginHorizontal="10dp"
                                android:contentDescription="@string/add_saved"
                                android:src="@drawable/ic_bookmark" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/shareButton"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_share"
                                app:tint="@color/textPrimary" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp">

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewPagerGallery"
                                android:layout_width="match_parent"
                                android:layout_height="280dp" />
                        </FrameLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabLayoutDots"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="@color/colorSecondaryVariant"
                                android:minWidth="0dp"
                                android:padding="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tabIndicatorColor="@android:color/white"
                                app:tabIndicatorGravity="center"
                                app:tabIndicatorHeight="0dp"
                                app:tabMode="fixed"
                                app:tabPadding="5dp"
                                app:tabPaddingBottom="5dp"
                                app:tabPaddingEnd="5dp"
                                app:tabPaddingStart="5dp"
                                app:tabRippleColor="#00FFFFFF"
                                app:tabSelectedTextColor="@android:color/white"
                                app:tabTextColor="@android:color/darker_gray"
                                app:tabUnboundedRipple="false" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="fill_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="--"
                            android:textColor="@color/textPrimary"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/priceDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="--€"
                            android:textColor="@color/textPrimary"
                            android:textSize="26sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="-%"
                        android:textColor="@color/colorError"
                        android:textSize="34sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/priceBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="--- --,--€"
                    android:textColor="@color/textSecondary"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/containerSeller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/productPoggers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_black"
                        android:text="@string/poggers"
                        android:textColor="@color/colorSuccess"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/info_poggers_product"
                        android:textColor="@color/textPrimary"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:id="@+id/contactSellerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_card_product"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chat_filled" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/send_a_message"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/inputText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input"
                            android:fontFamily="@font/roboto"
                            android:hint="Mensagem"
                            android:paddingHorizontal="15dp"
                            android:text="@string/default_message_ex"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/btnSend"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/rounded_full_button"
                            android:contentDescription="Enviar mensagem_button"
                            android:src="@drawable/ic_send" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/division" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:id="@+id/descriptionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/description"
                        android:textColor="@color/textPrimary"
                        android:textSize="28sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icUp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_down"
                        app:tint="@color/textPrimary" />
                </LinearLayout>

                <View
                    style="@style/division"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="8dp"
                    android:text="------------"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

            <View style="@style/division" />

            <LinearLayout
                android:id="@+id/containerUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_divisor_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="20dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/user"
                        android:textColor="@color/textPrimary"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp">

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_avatar_user"
                        android:clipToOutline="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/userAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_image_error" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="----------- ---------"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_size_large_alt" />

                        <TextView
                            android:id="@+id/userCreateDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---------------"
                            android:textColor="@color/textTertiary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/division" />

            <LinearLayout
                android:id="@+id/containerReviewsAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_divisor_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/reviews"
                        android:textColor="@color/textPrimary"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/seeAllReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:text="@string/see_all"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/productRating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="4.2"
                        android:textColor="@color/textPrimary"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:id="@+id/starsContainer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/reviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="1,524"
                        android:textColor="@color/textSecondary"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/noReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Não tem nenhuma review feita para esse produto."
                    android:textAlignment="center"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/containerReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="vertical"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_user_review" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/division" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Do mesmo tipo"
                        android:textColor="@color/textPrimary"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerForYou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvForYou"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_product" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/containerBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_divisor_top"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorDivider"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/minusProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_minus"
                        app:tint="@color/textPrimary" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/quantityProduct"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSurface"
                    android:gravity="center"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/plusProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/colorOnPrimary" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/actionPrimaryProduct"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/add_cart"
            android:textAllCaps="false"
            android:textColor="@color/colorOnPrimary" />

    </LinearLayout>

</LinearLayout>